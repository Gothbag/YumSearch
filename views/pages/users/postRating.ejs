<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
    </head>

    <body>

        <% include ../../partials/navigation %>

        <!--Contact form-->
        <div class="jumbotron jumbotron-sm"><br>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <h1 class="h1">
                            <img class="img-responsive img-thumbnail img-circle" src="/resources/img/rounded_white_icon.png" /> Leave your opinion</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="well well-sm">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="subject">
                                            Subject</label>
                                        <select id="subject" name="subject" class="form-control" required="required">
                                            <option value="na" selected="">Choose One:</option>
                                            <option value="service">General Customer Service</option>
                                            <option value="suggestions">Suggestions</option>
                                            <option value="product">Product Support</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">
                                            Name</label>
                                        <% if (user) { %>
                                        <input type="text" class="form-control" id="name" value="<%= user.local.username %>" required="required" />
                                        <% } else  { %>
                                        <input type="text" class="form-control" id="name" placeholder="Enter name here" required="required" />
                                        <% }  %>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">
                                            Email Address</label>
                                        <% if (user) { %>
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                                <input type="email" class="form-control" id="email" value="<%= user.local.email %>" required="required" />
                                            </div>
                                        <% } else  { %>
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                                <input type="email" class="form-control" id="email" placeholder="Enter email" required="required" />
                                            </div>
                                        <% }  %>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">
                                            Message</label>
                                        <textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required"
                                                  placeholder="Message"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-info pull-right" id="btnContactUs">
                                        Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4">
                    <form>
                        <legend><img src="/resources/img/black_icon.png" /> Please, be respectful</legend>
                        <address>
                            <strong>Delivering messages that include swearing, insults and/or rude language, or use of words in an inappropriate way, hate speech, or racial slurs aren't welcome on YumSearch and may cause your account to be suspended</strong><br>

                        </address>
                        <address>
                            <strong>Remember the</strong><br>
                            <a id="terms_cond" href="#">Terms and Conditions</a>
                        </address>
                    </form>
                </div>
            </div>
        </div><!--contact form-->

        <% include ../../partials/footer %>
        <script type="text/javascript" src="/modals/modals.js"></script>

    </body>
</html>
